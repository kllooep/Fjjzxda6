local Active = false
local Mode = "ÿ≥ÿ≠ÿ®"
local TargetPlayer
local HRP
local Angle = 0

local AnchorPart = Instance.new("Part", Workspace)
AnchorPart.Anchored = true
AnchorPart.Transparency = 1
AnchorPart.CanCollide = false
local Attach1 = Instance.new("Attachment", AnchorPart)

getgenv().Network = {
	Parts = {},
	Velocity = Vector3.new(999,999,999)
}

RunService.Heartbeat:Connect(function()
	sethiddenproperty(LocalPlayer,"SimulationRadius",math.huge)
	for _,p in ipairs(Network.Parts) do
		if p:IsDescendantOf(Workspace) then
			p.Velocity = Network.Velocity
		end
	end
end)

local function ForcePart(v)
	if v:IsA("BasePart") and not v.Anchored and TargetPlayer and v.Parent ~= TargetPlayer.Character then
		table.insert(Network.Parts, v)
		v.CanCollide = false
		v.CustomPhysicalProperties = PhysicalProperties.new(0,0,0,0,0)

		for _,x in ipairs(v:GetChildren()) do
			if x:IsA("BodyMover") then
				x:Destroy()
			end
		end

		local att = Instance.new("Attachment", v)
		local ap = Instance.new("AlignPosition", v)
		ap.Attachment0 = att
		ap.Attachment1 = Attach1
		ap.MaxForce = math.huge
		ap.Responsiveness = 500
	end
end

local function GetPlayer(name)
	name = name:lower()
	for _,p in ipairs(Players:GetPlayers()) do
		if p.Name:lower():find(name) or p.DisplayName:lower():find(name) then
			return p
		end
	end
end

TargetBox.FocusLost:Connect(function()
	TargetPlayer = GetPlayer(TargetBox.Text)
	if TargetPlayer then
		TargetBox.Text = TargetPlayer.Name
		HRP = TargetPlayer.Character and TargetPlayer.Character:WaitForChild("HumanoidRootPart")
	end
end)

ModeButton.MouseButton1Click:Connect(function()
	Mode = (Mode == "ÿ≥ÿ≠ÿ®") and "ÿØŸàÿ±ÿßŸÜ" or "ÿ≥ÿ≠ÿ®"
	ModeButton.Text = "MODE : "..Mode
end)

Toggle.MouseButton1Click:Connect(function()
	Active = not Active
	Toggle.Text = Active and "ÿ¥ÿ∫ÿßŸÑ" or "ŸÖŸÜÿ∑ŸÅÿ¶"
	Toggle.BackgroundColor3 = Active and Color3.fromRGB(0,120,0) or Color3.fromRGB(80,0,0)

	if Active and TargetPlayer then
		for _,v in ipairs(Workspace:GetDescendants()) do
			ForcePart(v)
		end
	end
end)

RunService.RenderStepped:Connect(function(dt)
	if Active and HRP then
		if Mode == "ÿ≥ÿ≠ÿ®" then
			Attach1.WorldCFrame = HRP.CFrame
		else
			local radius = tonumber(RadiusBox.Text) or 12
			local speed = tonumber(SpeedBox.Text) or 2
			Angle += dt * speed
			Attach1.WorldPosition = HRP.Position + Vector3.new(
				math.cos(Angle) * radius,
				0,
				math.sin(Angle) * radius
			)
		end
	end
end)
