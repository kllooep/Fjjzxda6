-- ==================== 6. تبويب: الأغراض ====================
local PropsTab = Window:MakeTab({
    Name = "الأغراض",
    Icon = "rbxassetid://1234567890"
})

local function PickTool(ToolName)
    local args = {
        [1] = "PickingTools",
        [2] = ToolName
    }
    local ToolRemote = game:GetService("ReplicatedStorage"):FindFirstChild("RE"):FindFirstChild("1Too1l")
    if ToolRemote then
        ToolRemote:InvokeServer(unpack(args))
    end
end

local function ClearAllProps()
    local args = { [1] = "ClearAllProps" }
    local ClearRemote = game:GetService("ReplicatedStorage"):FindFirstChild("RE"):FindFirstChild("1Clea1rTool1s")
    if ClearRemote then
        ClearRemote:FireServer(unpack(args))
    end
end

local function ClearAllTools()
    local args = { [1] = "ClearAllTools" }
    local ClearRemote = game:GetService("ReplicatedStorage"):FindFirstChild("RE"):FindFirstChild("1Clea1rTool1s")
    if ClearRemote then
        ClearRemote:FireServer(unpack(args))
    end
end

